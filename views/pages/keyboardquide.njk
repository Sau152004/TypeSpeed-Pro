{% extends "layouts/main.njk" %}

{% block title %}Keyboard Guide - TypeSpeed Pro{% endblock %}

{% block content %}
<div class="max-w-6xl mx-auto space-y-8">
    <!-- Header -->
    <div class="text-center py-12">
        <h1 class="text-4xl md:text-6xl font-bold mb-4">
            <span class="text-primary-600">Keyboard</span> Guide
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto">
            Master your keyboard layout, understand finger positioning, and learn the most efficient typing techniques.
        </p>
        <nav class="flex justify-center space-x-4 text-sm">
            <a href="/resources" class="text-primary-600 hover:underline">‚Üê Back to Resources</a>
            <span class="text-gray-300">|</span>
            <a href="#layout" class="hover:text-primary-600">Layout</a>
            <span class="text-gray-300">|</span>
            <a href="#finger-map" class="hover:text-primary-600">Finger Map</a>
            <span class="text-gray-300">|</span>
            <a href="#special-keys" class="hover:text-primary-600">Special Keys</a>
        </nav>
    </div>

    <!-- Interactive Keyboard Display -->
    <section id="layout" class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8">
        <h2 class="text-3xl font-bold mb-6 text-center">Interactive QWERTY Layout</h2>
        <p class="text-center text-gray-600 dark:text-gray-300 mb-8">
            Click on any key to see which finger should press it, or hover to see key information.
        </p>
        
        <!-- Keyboard Layout -->
        <div class="bg-gray-100 dark:bg-gray-700 rounded-xl p-8 max-w-4xl mx-auto">
            <!-- Number Row -->
            <div class="grid grid-cols-13 gap-1 mb-2" style="grid-template-columns: repeat(13, minmax(0, 1fr));">
                <div class="keyboard-key" data-finger="left-pinky" data-key="`">
                    <span class="main">~</span>
                    <span class="sub">`</span>
                </div>
                <div class="keyboard-key" data-finger="left-pinky" data-key="1">
                    <span class="main">!</span>
                    <span class="sub">1</span>
                </div>
                <div class="keyboard-key" data-finger="left-ring" data-key="2">
                    <span class="main">@</span>
                    <span class="sub">2</span>
                </div>
                <div class="keyboard-key" data-finger="left-middle" data-key="3">
                    <span class="main">#</span>
                    <span class="sub">3</span>
                </div>
                <div class="keyboard-key" data-finger="left-index" data-key="4">
                    <span class="main">$</span>
                    <span class="sub">4</span>
                </div>
                <div class="keyboard-key" data-finger="left-index" data-key="5">
                    <span class="main">%</span>
                    <span class="sub">5</span>
                </div>
                <div class="keyboard-key" data-finger="right-index" data-key="6">
                    <span class="main">^</span>
                    <span class="sub">6</span>
                </div>
                <div class="keyboard-key" data-finger="right-index" data-key="7">
                    <span class="main">&</span>
                    <span class="sub">7</span>
                </div>
                <div class="keyboard-key" data-finger="right-middle" data-key="8">
                    <span class="main">*</span>
                    <span class="sub">8</span>
                </div>
                <div class="keyboard-key" data-finger="right-ring" data-key="9">
                    <span class="main">(</span>
                    <span class="sub">9</span>
                </div>
                <div class="keyboard-key" data-finger="right-pinky" data-key="0">
                    <span class="main">)</span>
                    <span class="sub">0</span>
                </div>
                <div class="keyboard-key" data-finger="right-pinky" data-key="-">
                    <span class="main">_</span>
                    <span class="sub">-</span>
                </div>
                <div class="keyboard-key" data-finger="right-pinky" data-key="=">
                    <span class="main">+</span>
                    <span class="sub">=</span>
                </div>
            </div>

            <!-- Top Row (QWERTY) -->
            <div class="grid grid-cols-12 gap-1 mb-2" style="grid-template-columns: 1.5fr repeat(10, 1fr) 1.5fr;">
                <div class="keyboard-key special-key" data-key="Tab">Tab</div>
                <div class="keyboard-key home-row" data-finger="left-pinky" data-key="q">Q</div>
                <div class="keyboard-key" data-finger="left-ring" data-key="w">W</div>
                <div class="keyboard-key" data-finger="left-middle" data-key="e">E</div>
                <div class="keyboard-key" data-finger="left-index" data-key="r">R</div>
                <div class="keyboard-key" data-finger="left-index" data-key="t">T</div>
                <div class="keyboard-key" data-finger="right-index" data-key="y">Y</div>
                <div class="keyboard-key" data-finger="right-index" data-key="u">U</div>
                <div class="keyboard-key" data-finger="right-middle" data-key="i">I</div>
                <div class="keyboard-key" data-finger="right-ring" data-key="o">O</div>
                <div class="keyboard-key" data-finger="right-pinky" data-key="p">P</div>
                <div class="keyboard-key" data-finger="right-pinky" data-key="[">
                    <span class="main">{</span>
                    <span class="sub">[</span>
                </div>
                <div class="keyboard-key" data-finger="right-pinky" data-key="]">
                    <span class="main">}</span>
                    <span class="sub">]</span>
                </div>
            </div>

            <!-- Middle Row (Home Row) -->
            <div class="grid grid-cols-12 gap-1 mb-2" style="grid-template-columns: 1.75fr repeat(9, 1fr) 2.25fr;">
                <div class="keyboard-key special-key" data-key="Caps">Caps</div>
                <div class="keyboard-key home-row" data-finger="left-pinky" data-key="a">A</div>
                <div class="keyboard-key home-row" data-finger="left-ring" data-key="s">S</div>
                <div class="keyboard-key home-row" data-finger="left-middle" data-key="d">D</div>
                <div class="keyboard-key home-row" data-finger="left-index" data-key="f">F</div>
                <div class="keyboard-key" data-finger="left-index" data-key="g">G</div>
                <div class="keyboard-key" data-finger="right-index" data-key="h">H</div>
                <div class="keyboard-key home-row" data-finger="right-index" data-key="j">J</div>
                <div class="keyboard-key home-row" data-finger="right-middle" data-key="k">K</div>
                <div class="keyboard-key home-row" data-finger="right-ring" data-key="l">L</div>
                <div class="keyboard-key home-row" data-finger="right-pinky" data-key=";">
                    <span class="main">:</span>
                    <span class="sub">;</span>
                </div>
                <div class="keyboard-key" data-finger="right-pinky" data-key="'">
                    <span class="main">"</span>
                    <span class="sub">'</span>
                </div>
            </div>

            <!-- Bottom Row -->
            <div class="grid grid-cols-11 gap-1 mb-2" style="grid-template-columns: 2.25fr repeat(8, 1fr) 2.75fr;">
                <div class="keyboard-key special-key" data-key="Shift">Shift</div>
                <div class="keyboard-key" data-finger="left-pinky" data-key="z">Z</div>
                <div class="keyboard-key" data-finger="left-ring" data-key="x">X</div>
                <div class="keyboard-key" data-finger="left-middle" data-key="c">C</div>
                <div class="keyboard-key" data-finger="left-index" data-key="v">V</div>
                <div class="keyboard-key" data-finger="left-index" data-key="b">B</div>
                <div class="keyboard-key" data-finger="right-index" data-key="n">N</div>
                <div class="keyboard-key" data-finger="right-index" data-key="m">M</div>
                <div class="keyboard-key" data-finger="right-middle" data-key=",">
                    <span class="main">&lt;</span>
                    <span class="sub">,</span>
                </div>
                <div class="keyboard-key" data-finger="right-ring" data-key=".">
                    <span class="main">&gt;</span>
                    <span class="sub">.</span>
                </div>
                <div class="keyboard-key" data-finger="right-pinky" data-key="/">
                    <span class="main">?</span>
                    <span class="sub">/</span>
                </div>
            </div>

            <!-- Space Bar Row -->
            <div class="grid grid-cols-7 gap-1" style="grid-template-columns: 1.25fr 1.25fr 1.25fr 6fr 1.25fr 1.25fr 1.25fr;">
                <div class="keyboard-key special-key" data-key="Ctrl">Ctrl</div>
                <div class="keyboard-key special-key" data-key="Win">Win</div>
                <div class="keyboard-key special-key" data-key="Alt">Alt</div>
                <div class="keyboard-key special-key" data-finger="thumb" data-key="Space">Space</div>
                <div class="keyboard-key special-key" data-key="Alt">Alt</div>
                <div class="keyboard-key special-key" data-key="Win">Win</div>
                <div class="keyboard-key special-key" data-key="Ctrl">Ctrl</div>
            </div>
        </div>

        <!-- Key Information Display -->
        <div id="key-info" class="mt-8 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg text-center">
            <p class="text-gray-600 dark:text-gray-300">Click on a key to see which finger should press it</p>
        </div>
    </section>

    <!-- Finger Mapping -->
