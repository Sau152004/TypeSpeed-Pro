<script>
document.addEventListener('DOMContentLoaded', function() {
    const keys = document.querySelectorAll('.keyboard-key[data-finger]');
    const keyInfo = document.getElementById('key-info');
    
    // Finger names mapping
    const fingerNames = {
        'left-pinky': 'Left Pinky',
        'left-ring': 'Left Ring Finger',
        'left-middle': 'Left Middle Finger',
        'left-index': 'Left Index Finger',
        'right-index': 'Right Index Finger',
        'right-middle': 'Right Middle Finger',
        'right-ring': 'Right Ring Finger',
        'right-pinky': 'Right Pinky',
        'thumb': 'Thumb'
    };
    
    // Finger colors
    const fingerColors = {
        'left-pinky': '#e91e63',
        'right-pinky': '#e91e63',
        'left-ring': '#ff9800',
        'right-ring': '#ff9800',
        'left-middle': '#4caf50',
        'right-middle': '#4caf50',
        'left-index': '#2196f3',
        'right-index': '#2196f3',
        'thumb': '#9c27b0'
    };
    
    // Add click handlers to keys
    keys.forEach(key => {
        key.addEventListener('click', function() {
            // Remove active class from all keys
            keys.forEach(k => k.classList.remove('active'));
            
            // Add active class to clicked key
            this.classList.add('active', 'pressed');
            
            // Remove pressed class after animation
            setTimeout(() => {
                this.classList.remove('pressed');
            }, 200);
            
            // Update key info
            const finger = this.dataset.finger;
            const keyName = this.dataset.key;
            const fingerName = fingerNames[finger];
            const color = fingerColors[finger];
            
            keyInfo.innerHTML = `
                <div class="flex items-center justify-center space-x-4">
                    <div class="w-8 h-8 rounded-full" style="background-color: ${color}"></div>
                    <div>
                        <div class="font-bold text-lg">${keyName.toUpperCase()}</div>
                        <div class="text-sm text-gray-600 dark:text-gray-300">Press with: ${fingerName}</div>
                    </div>
                </div>
            `;
        });
        
        // Add hover effect
        key.addEventListener('mouseenter', function() {
            if (!this.classList.contains('active')) {
                const finger = this.dataset.finger;
                const fingerName = fingerNames[finger];
                
                keyInfo.innerHTML = `
                    <div class="text-center">
                        <div class="text-sm text-gray-600 dark:text-gray-300">
                            Hover: <strong>${this.dataset.key.toUpperCase()}</strong> - Use ${fingerName}
                        </div>
                    </div>
                `;
            }
        });
    });
    
    // Highlight finger zone on key click
    function highlightFingerZone(finger) {
        keys.forEach(key => {
            if (key.dataset.finger === finger) {
                key.style.backgroundColor = fingerColors[finger];
                key.style.opacity = '0.7';
            } else {
                key.style.backgroundColor = '';
                key.style.opacity = '';
            }
        });
    }
    
    // Reset highlighting
    function resetHighlighting() {
        keys.forEach(key => {
            key.style.backgroundColor = '';
            key.style.opacity = '';
            key.classList.remove('active');
        });
    }
    
    // Keyboard event listeners for real typing
    document.addEventListener('keydown', function(e) {
        const key = e.key.toLowerCase();
        const keyElement = document.querySelector(`[data-key="${key}"]`);
        
        if (keyElement) {
            keyElement.classList.add('active', 'pressed');
            
            // Update info for real keypress
            const finger = keyElement.dataset.finger;
            if (finger) {
                const fingerName = fingerNames[finger];
                const color = fingerColors[finger];
                
                keyInfo.innerHTML = `
                    <div class="flex items-center justify-center space-x-4">
                        <div class="w-8 h-8 rounded-full" style="background-color: ${color}"></div>
                        <div>
                            <div class="font-bold text-lg">${key.toUpperCase()}</div>
                            <div class="text-sm text-green-600">‚úì Correct finger: ${fingerName}</div>
                        </div>
                    </div>
                `;
            }
        }
    });
    
    document.addEventListener('keyup', function(e) {
        const key = e.key.toLowerCase();
        const keyElement = document.querySelector(`[data-key="${key}"]`);
        
        if (keyElement) {
            setTimeout(() => {
                keyElement.classList.remove('active', 'pressed');
            }, 100);
        }
    });
    
    // Handle special keys
    const specialKeyMappings = {
        ' ': 'Space',
        'Tab': 'Tab',
        'CapsLock': 'Caps',
        'Shift': 'Shift',
        'Control': 'Ctrl',
        'Alt': 'Alt',
        'Meta': 'Win'
    };
    
    document.addEventListener('keydown', function(e) {
        const specialKey = specialKeyMappings[e.key];
        if (specialKey) {
            const keyElement = document.querySelector(`[data-key="${specialKey}"]`);
            if (keyElement) {
                keyElement.classList.add('active', 'pressed');
            }
        }
    });
    
    document.addEventListener('keyup', function(e) {
        const specialKey = specialKeyMappings[e.key];
        if (specialKey) {
            const keyElement = document.querySelector(`[data-key="${specialKey}"]`);
            if (keyElement) {
                setTimeout(() => {
                    keyElement.classList.remove('active', 'pressed');
                }, 100);
            }
        }
    });
});
</script>
