    <script>
        document.addEventListener('DOMContentLoaded', function () {
            initializeFAQ();
            initializeSearch();
            initializeSmoothScrolling();
        });

        function initializeFAQ() {
            const faqQuestions = document.querySelectorAll('.faq-question');

            faqQuestions.forEach(question => {
                question.addEventListener('click', function () {
                    const answer = this.nextElementSibling;
                    const isOpen = !answer
                        .classList
                        .contains('hidden');

                    // Close all other answers
                    document
                        .querySelectorAll('.faq-answer')
                        .forEach(ans => {
                            ans
                                .classList
                                .add('hidden');
                        });
                    document
                        .querySelectorAll('.faq-question')
                        .forEach(q => {
                            q
                                .classList
                                .remove('active');
                        });

                    // Toggle current answer
                    if (!isOpen) {
                        answer
                            .classList
                            .remove('hidden');
                        this
                            .classList
                            .add('active');

                        // Smooth scroll to question if needed
                        setTimeout(() => {
                            this.scrollIntoView({behavior: 'smooth', block: 'nearest'});
                        }, 100);
                    }
                });
            });
        }

        function initializeSearch() {
            const searchInput = document.getElementById('faq-search');
            const searchResults = document.getElementById('search-results');
            const resultsList = document.getElementById('results-list');

            let searchTimeout;

            searchInput.addEventListener('input', function () {
                clearTimeout(searchTimeout);
                const query = this
                    .value
                    .trim()
                    .toLowerCase();

                if (query.length < 2) {
                    searchResults
                        .classList
                        .add('hidden');
                    clearHighlights();
                    return;
                }

                searchTimeout = setTimeout(() => {
                    performSearch(query);
                }, 300);
            });

            function performSearch(query) {
                const faqItems = document.querySelectorAll('.faq-item');
                const results = [];

                // Clear previous highlights
                clearHighlights();

                faqItems.forEach(item => {
                    const question = item
                        .querySelector('.faq-question span')
                        .textContent
                        .toLowerCase();
                    const answer = item
                        .querySelector('.faq-answer')
                        .textContent
                        .toLowerCase();
                    const keywords = item
                        .querySelector('.faq-question')
                        .dataset
                        .keywords || '';

                    const searchableText = `${question} ${answer} ${keywords}`.toLowerCase();

                    if (searchableText.includes(query)) {
                        results.push({
                            element: item,
                            question: item
                                .querySelector('.faq-question span')
                                .textContent,
                            relevance: calculateRelevance(searchableText, query)
                        });

                        // Highlight matches in question
                        highlightText(item.querySelector('.faq-question span'), query);
                    }
                });

                // Sort by relevance
                results.sort((a, b) => b.relevance - a.relevance);

                displaySearchResults(results, query);
            }

            function calculateRelevance(text, query) {
                let score = 0;
                const words = query.split(' ');

                words.forEach(word => {
                    const regex = new RegExp(word, 'gi');
                    const matches = text.match(regex);
                    if (matches) {
                        score += matches.length;
                    }
                });

                return score;
            }

            function displaySearchResults(results, query) {
                if (results.length === 0) {
                    resultsList.innerHTML = '<p class="text-gray-500 dark:text-gray-400">No results found.</p>';
                } else {
                    resultsList.innerHTML = results
                        .slice(0, 5)
                        .map(result => `
                <div class="search-result-item" onclick="scrollToFAQ(this)" data-target="${getItemId(result.element)}">
                    <div class="font-medium">${highlightQueryInText(result.question, query)}</div>
                </div>
            `)
                        .join('');
                }

                searchResults
                    .classList
                    .remove('hidden');
            }

            function highlightText(element, query) {
                const text = element.textContent;
                const regex = new RegExp(`(${query})`, 'gi');
                element.innerHTML = text.replace(regex, '<span class="search-highlight">$1</span>');
            }

            function highlightQueryInText(text, query) {
                const regex = new RegExp(`(${query})`, 'gi');
                return text.replace(regex, '<span class="search-highlight">$1</span>');
            }

            function clearHighlights() {
                document
                    .querySelectorAll('.search-highlight')
                    .forEach(highlight => {
                        const parent = highlight.parentNode;
                        parent.replaceChild(document.createTextNode(highlight.textContent), highlight);
                        parent.normalize();
                    });
            }

            function getItemId(element) {
                return Array
                    .from(document.querySelectorAll('.faq-item'))
                    .indexOf(element);
            }
        }

        function scrollToFAQ(resultElement) {
            const targetIndex = parseInt(resultElement.dataset.target);
            const faqItems = document.querySelectorAll('.faq-item');
            const targetItem = faqItems[targetIndex];

            if (targetItem) {
                const questionButton = targetItem.querySelector('.faq-question');

                // Open the FAQ
                questionButton.click();

                // Scroll to it
                setTimeout(() => {
                    targetItem.scrollIntoView({behavior: 'smooth', block: 'center'});
                }, 100);

                // Hide search results
                document
                    .getElementById('search-results')
                    .classList
                    .add('hidden');
                document
                    .getElementById('faq-search')
                    .value = '';
            }
        }

        function initializeSmoothScrolling() {
            document
                .querySelectorAll('a[href^="#"]')
                .forEach(anchor => {
                    anchor.addEventListener('click', function (e) {
                        e.preventDefault();
                        const target = document.querySelector(this.getAttribute('href'));
                        if (target) {
                            target.scrollIntoView({behavior: 'smooth', block: 'start'});
                        }
                    });
                });
        }

