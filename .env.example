# Server Configuration
PORT=3000
NODE_ENV=development
APP_VERSION=1.0.0

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://your-db-user:your-db-password@your-db-host/your-db-name?sslmode=require

# Session Security (replace in production!)
SESSION_SECRET=your-super-secret-session-key-minimum-32-characters-long

# CORS Settings (for development or production)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Redis (Optional)
REDIS_URL=

# Manual DB Config (fallback if DATABASE_URL is not used)
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=your-db-name
DB_USER=your-db-user
DB_PASSWORD=your-db-password
